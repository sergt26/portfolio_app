<h1>Rails Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @rails_portfolio_items.each do |p| %>
  <p><%= link_to p.title, portfolio_show_path(p) %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image if !p.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(p) %>
  <%= link_to "Show", portfolio_show_path(p) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
