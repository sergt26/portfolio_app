<h1>Angular Portfolios Items</h1>

<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>

<% @angular_portfolio_items.each do |p| %>
  <p><%= link_to p.title, portfolio_show_path(p) %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image if !p.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(p) if logged_in?(:site_admin) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(p), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>
