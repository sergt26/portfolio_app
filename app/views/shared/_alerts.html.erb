<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Sergio Aravena Portfolio", sticky: false, time: 4000) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: "Sergio Aravena Portfolio", sticky: false, time: 4000) %>
<% else %>
    <%= js add_gritter(flash[:notice], title: "Sergio Aravena Portfolio", sticky: false, time: 4000) %>
<% end %>
